<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.Assignments.AssignmentCheckpointPage"
             xmlns:local="clr-namespace:Mobile.ViewModels.Assignments"
             xmlns:model="clr-namespace:Mobile.Models"
             Title="{ Binding Title }">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="settings.png"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <StackLayout VerticalOptions="Fill" Orientation="Vertical" HorizontalOptions="Start">

            <!-- Due Day -->
            <Frame CornerRadius="2" HasShadow="True" Margin="30,20,30,5" IsTabStop="False">
                <FlexLayout Wrap="Wrap">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="230" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Padding="7"
                            Grid.Column="0"
                            Text="Due: "
                            TextColor="Black"
                            FontSize="Medium"
                            FontAttributes="Bold"
                        />
                        <Button
                            Grid.Column="1"
                            Text="{ Binding Checkpoint.DueDateString }"
                            FontSize="Small"
                            FontAttributes="Bold"
                            TextColor="White"
                            BackgroundColor="#7a7e80"
                            CornerRadius="180"
                            WidthRequest="230"
                        />
                    </Grid>
                </FlexLayout>
            </Frame>

            <!-- Note/Descrition board -->
            <Frame HasShadow="True" Margin="30,5,30,30" IsTabStop="False">
                <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <StackLayout>
                        <Label
                            HorizontalTextAlignment="Start"
                            FontSize="16"
                            FontAttributes="Bold"
                            Text="Description: "
                            TextColor="Black" />
                        <Editor
                            Placeholder="Add a description here"
                            Text="{Binding CheckpointNotes, Mode=TwoWay}"
                            AutoSize="TextChanges" MaxLength="110" Keyboard="Text" />
                    </StackLayout>
                </AbsoluteLayout>
            </Frame>

            <!-- Assigned member: NOT WORKING -->
            <Frame HasShadow="True" Margin="30,5,30,30" IsTabStop="False">
                <FlexLayout Wrap="Wrap">
                    <Label
                        Text="{Binding Checkpoint.AssignedUsers}"
                        FontSize="Small" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--Binding to the assigned members-->
                        <Button 
                            FontSize="Large"
                            FontAttributes="Bold"
                            BackgroundColor="White"
                            BorderColor="Gray"
                            BorderWidth="2"
                            HeightRequest="60"
                            BorderRadius="180"
                            WidthRequest="60"
                            />

                        <Button
                            Grid.Column="1"
                            Text="+"
                            FontSize="Large"
                            FontAttributes="Bold"
                            BackgroundColor="#bcc3c4"
                            HeightRequest="60"
                            BorderRadius="180"
                            WidthRequest="60"/>
                    </Grid>
                </FlexLayout>
            </Frame>

            <!-- Check list: -->
            <Frame HasShadow="True" Margin="30,5,30,30" IsTabStop="False">
                <StackLayout>
                    <Label Text="Checklist" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
                    <BoxView Color="Gray" HeightRequest="2" HorizontalOptions="Fill" />

                    <!-- Check box: Checklist items -->
                    <StackLayout x:Name="CheckListItems"
                                 BindableLayout.ItemsSource="{ Binding Checklist }"
                                 FlowDirection="LeftToRight">

                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Horizontal">
                                    <CheckBox x:Name="checkBox" IsChecked="{Binding IsDone}" Color="DarkSeaGreen"/>
                                    <Label VerticalOptions="Center" Text="{ Binding Text }">

                                        <!-- Checkbox animation -->
                                        <Label.Triggers>
                                            <DataTrigger TargetType="Label"
                                             Binding="{Binding Source={x:Reference checkBox}, Path=IsChecked}"
                                             Value="true">
                                                <Setter Property="FontAttributes"
                                            Value="Italic, Bold" />
                                                <Setter Property="FontSize"
                                            Value="Medium" />
                                            </DataTrigger>
                                        </Label.Triggers>
                                    </Label>
                                </StackLayout>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>

                    <!-- ADD task button -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <!--<ColumnDefinition Width="*" />-->
                        </Grid.ColumnDefinitions>
                        <Button Text="Add Task"
                                CornerRadius="180"
                                BackgroundColor="#bcc3c4"
                                HeightRequest="46"
                                Clicked="AddTaskPopup"/>
                        <!--<Button Grid.Column="1"
                                Text="Done"
                                CornerRadius="180"
                                BackgroundColor="#bcc3c4"
                                HeightRequest="46"/>-->
                    </Grid>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>