<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.ProfilePage"
             xmlns:vm="clr-namespace:Mobile.ViewModels"
             xmlns:model="clr-namespace:Mobile.Models"
             xmlns:local="clr-namespace:Mobile.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>

    <RefreshView x:DataType="local:ProfileViewModel" Command="{Binding LoadProfileSkillsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <StackLayout Padding="20, 20, 20, 20" AbsoluteLayout.LayoutBounds="1,1,1,1" AbsoluteLayout.LayoutFlags="All">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height ="20"/>
                    <RowDefinition Height ="20"/>
                    <RowDefinition Height ="*"/>
                    <RowDefinition Height ="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Label Text="{Binding DisplayName}" Grid.Row="0" Grid.Column="1"/>
                <Label Text="{Binding DisplayUniversity}" Grid.Row="1" Grid.Column="1"/>
            </Grid>


            <Frame HasShadow="True">
                <!--Margin="30,5,30,5">-->

                <StackLayout>
                    <Label Text="Skills" FontSize="Medium" FontAttributes="Bold"></Label>
                    <FlexLayout x:Name="SkillsListView" Wrap="Wrap" 
                        
                        BindableLayout.ItemsSource="{Binding ProfileSkills }">

                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="5" x:DataType="model:Skill" 
                                       BackgroundColor="#F0F0F0" HasShadow="False" 
                                       Padding="4,4,4,4" HorizontalOptions="StartAndExpand" 
                                       VerticalOptions="FillAndExpand"
                                       Margin="8,0,0,0"
                                       HeightRequest="30">
                                    <StackLayout AbsoluteLayout.LayoutFlags="All">
                                        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Orientation="Vertical">
                                                <Label Text="{Binding Name}">

                                                </Label>

                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </StackLayout>
            </Frame>


            <!--<Frame CornerRadius="2" Padding="4,4,4,4" VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand" Grid.Row="3">
                <RefreshView x:DataType="local:ProfileViewModel" Command="{Binding LoadProfileSkillsCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
                <CollectionView ItemsSource="{Binding ProfileSkills}" ItemsLayout="HorizontalGrid, 4">
                    <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Skill">
                                <Frame>
                                    <Frame CornerRadius="5" Padding="4,4,4,4" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
                                        <Label Text="{Binding Name}"/>
                                    </Frame>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </RefreshView>
            </Frame>-->

            <!--<Frame CornerRadius="2" Padding="4,4,4,4" VerticalOptions="StartAndExpand" HorizontalOptions="StartAndExpand" Grid.Row="3">
            <CollectionView ItemsSource="{Binding ProfileSkills}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Skill">
                        <Frame>
                            <Frame CornerRadius="5" Padding="4,4,4,4" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand">
                                <Label Text="{Binding Id}"/>
                            </Frame>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Frame>-->

        </StackLayout>
    </RefreshView>
</ContentPage>
    