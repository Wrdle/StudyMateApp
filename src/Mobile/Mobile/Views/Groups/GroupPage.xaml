<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.Groups.GroupPage"
             xmlns:local="clr-namespace:Mobile.ViewModels.Assignments"
             xmlns:model="clr-namespace:Mobile.Models"
             Title="{Binding Title}">

    <!--Toolbar-->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Info"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <!--Content-->
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="Fill" Orientation="Vertical">
                
                <!-- Cover Photo -->
                <Frame Padding="0" Margin="0" BackgroundColor="{Binding Group.CoverColor.BackgroundColor}">
                    <Image Source="{Binding Group.CoverPhoto}" HeightRequest="200" Aspect="AspectFill" IsVisible="{Binding ShowCoverPhoto}"></Image>
                </Frame>

                <!-- Description -->
                <Frame HasShadow="True" Margin="30,5,30,5" IsTabStop="False">
                    <StackLayout>
                        <Label Text="Description" FontSize="Medium" FontAttributes="Bold"></Label>
                        <Label Text="Description here." FontSize="Small"></Label>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>